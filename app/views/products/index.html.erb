<h1><%= t ".title" %></h1>

<section>
  <%= link_to "+", new_product_path, class: "rounded bg-purple-100 p-4 text-center" if authenticated? %>
</section>

<section class="flex flex-wrap gap-2">
  <% @products.each do |product| %>
    <%= link_to product, class: 'rounded p-2 basis-1/5 bg-purple-100' do %>
      <article>
        <header>
          <h2>
            <%= product.name %>
          </h2>
          <% if product.inventory_count %>
            <p>
              <%= product.inventory_count %> in stock
            </p>
          <% else %>
            <p>Out of stock</p>
          <% end %>
          <p>
            <strong>Price:</strong>
            <%= number_to_currency(product.price) %>
          </p>
        </header>
        <section class="text-sm">
          <%= product.description %>
        </section>
      </article>
    <% end %>
  <% end %>
</section>